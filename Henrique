#include <stdio.h> 
#include <math.h> 
#include <locale.h>

// Função para realizar as operações matemáticas
void menu() {
	setlocale(LC_ALL, "Portuguese");
    printf("Escolha uma operaçao:\n");
    printf("1. Adiçao (+)\n");
    printf("2. Subtraçao (-)\n");
    printf("3. Multiplicaçao (*)\n");
    printf("4. Divisão (/)\n");
    printf("5. Exponenciaçao (x^y)\n");
    printf("6. Raiz Quadrada (sqrt)\n");
    printf("7. Seno (sin)\n");
    printf("8. Cosseno (cos)\n");
    printf("9. Tangente (tan)\n");
    printf("10. Cofre\n");
    printf("11. Sair\n");
}

int main() {
	setlocale(LC_ALL, "Portuguese");
    int escolha, senha;
    double num1, num2, resultado;
    
    // Exibindo o menu de opções
    while(1) {
        menu();
        printf("Digite o número da operacao desejada: ");
        scanf("%d", &escolha);
        
        // Verificando a operação escolhida
        
         if (escolha == 42) {  // Easter Egg secreto
            printf("Você descobriu o easter egg!\n");
            printf("Ácido clorídrico, formula!\n");
            continue;  // Volta para o menu
        }
        
        
        
        switch(escolha) {
        	
            case 1:  // Adição
                printf("Digite dois números: ");
                scanf("%lf %lf", &num1, &num2);
                resultado = num1 + num2;
                printf("Resultado: %.2lf\n", resultado);
                break;
                
                
            case 2:  // Subtração
                printf("Digite dois números: ");
                scanf("%lf %lf", &num1, &num2);
                resultado = num1 - num2;
                printf("Resultado: %.2lf\n", resultado);
                break;
                
                
            case 3:  // Multiplicação
                printf("Digite dois números: ");
                scanf("%lf %lf", &num1, &num2);
                resultado = num1 * num2;
                printf("Resultado: %.2lf\n", resultado);
                break;
                
                
            case 4:  // Divisão
                printf("Digite dois números: ");
                scanf("%lf %lf", &num1, &num2);
                if (num2 != 0) {
                    resultado = num1 / num2;
                    printf("Resultado: %.2lf\n", resultado);
                } else {
                    printf("Erro: Divisao por zero!\n");
                }
                break;
                
                
            case 5:  // Exponenciação
                printf("Digite a base e o expoente: ");
                scanf("%lf %lf", &num1, &num2);
                resultado = pow(num1, num2);
                printf("Resultado: %.2lf\n", resultado);
                break;
                
                
            case 6:  // Raiz Quadrada
                printf("Digite um número: ");
                scanf("%lf", &num1);
                if (num1 >= 0) {
                    resultado = sqrt(num1);
                    printf("Resultado: %.2lf\n", resultado);
                } else {
                    printf("Erro: Raiz quadrada de um número negativo não é permitida!\n");
                }
                break;
                
                
            case 7:  // Seno
                printf("Digite um número (em graus): ");
                scanf("%lf", &num1);
                // Convertendo de graus para radianos
                num1 = num1 * (M_PI / 180.0);
                resultado = sin(num1);
                printf("Resultado (Seno): %.2lf\n", resultado);
                break;
                
                
            case 8:  // Cosseno
                printf("Digite um número (em graus): ");
                scanf("%lf", &num1);
                // Convertendo de graus para radianos
                num1 = num1 * (M_PI / 180.0);
                resultado = cos(num1);
                printf("Resultado (Cosseno): %.2lf\n", resultado);
                break;
                
                
            case 9:  // Tangente
                printf("Digite um número (em graus): ");
                scanf("%lf", &num1);
                // Convertendo de graus para radianos
                num1 = num1 * (M_PI / 180.0);
                resultado = tan(num1);
                printf("Resultado (Tangente): %.2lf\n", resultado);
                break;
                
            case 10:
            	printf("Digite a senha do cofre: ");
            	scanf("%d", &senha);
            	if(senha == 1653)
            	{
            		printf("Parábens, Você venceu!\n");
				}
                else
                {
                	printf("Senha incorreta, tente novamente!\n\n");
				}
                break;
                
            case 11:  // Sair
                printf("Saindo...\n");
                return 0;
                break;
                
                
            default:
                printf("Opcao invalida! Tente novamente.\n");
        }
    }
    return 0;
}
